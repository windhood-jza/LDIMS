{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs", 
    "declaration": true, 
    "emitDeclarationOnly": false, 
    "outDir": "./dist", 
    "declarationDir": "./dist/types", 
    "rootDir": "./src", 
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
} 